<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns:tabView="clr-namespace:Syncfusion.Maui.TabView;assembly=Syncfusion.Maui.TabView"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:Views="clr-namespace:ATest1.Views"
             x:Class="ATest1.MainPage">

    <tabView:SfTabView TabBarPlacement="Bottom" 
                       IndicatorPlacement="Top">
        <tabView:SfTabItem ImageSource="phone.png"
                           ImagePosition="Left" 
                           TextColor="White"
                           Header="Calls">

            <tabView:SfTabItem.Content>
                <Views:CallsView VerticalOptions="Fill"/>
            </tabView:SfTabItem.Content>
            
        </tabView:SfTabItem>
    </tabView:SfTabView>

</ContentPage>
